				</choice>
				<choice name="Wide">
					<patch id="fovwide"/>
				</choice>
				<choice name="Very Wide">
					<patch id="fovverywide"/>
				</choice>
			</option>
			<option name="Low-angled Camera">
				<choice name="Enabled">
					<patch id="tmcamera"/>
				</choice>
			</option>
		</section>
		<!-- Audio -->
		<section name="FKW - Audio Settings">
			<option name="Character Voices" default="1">
				<choice name="Enabled">
