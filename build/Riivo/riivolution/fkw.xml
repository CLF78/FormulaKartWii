				</choice>
			</option>
			<option name="Music: Race" default="1">
				<choice name="Normal">
					<patch id="racemusic"/>
				</choice>
				<choice name="Accelerating">
					<patch id="gradmusic"/>
				</choice>
			</option>
			<option name="Music: Transformation" default="1">
				<choice name="Normal">
					<patch id="transfmusic"/>
				</choice>
				<choice name="Overlayed">
					<patch id="overlayedtransfmusic"/>
				</choice>
			</option>
			<option name="Music: Distortion" default="1">
				<choice name="Enabled">
					<patch id="distortedmusic"/>
				</choice>
			</option>
			<option name="Automatic BRSAR Patching" default="1">
				<choice name="Enabled">
					<patch id="autobrsar"/>
				</choice>
			</option>
		</section>
