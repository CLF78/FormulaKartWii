					<patch id="greentored"/>
				</choice>
				<choice name="Banana">
					<patch id="greentobanana"/>
				</choice>
				<choice name="Fake Item Box">
					<patch id="greentofib"/>
				</choice>
				<choice name="Bob-omb">
					<patch id="greentobomb"/>
				</choice>
				<choice name="Blue Shell">
					<patch id="greentoblue"/>
				</choice>
				<choice name="Feather">
					<patch id="greentofeather"/>
				</choice>
				<choice name="POW Block">
					<patch id="greentopow"/>
				</choice>
			</option>
			<option name="Bullet Bill Thunderclouds" default="1">
				<choice name="Enabled">
					<patch id="bullettcs"/>
				</choice>
			</option>
			<option name="Instant Respawn" default="1">
				<choice name="Enabled">
