	</patch>
	<patch id="timediff1">
		<memory offset="0x800017B5" value="01" original="00"/>
	</patch>
	<patch id="timediff2">
		<memory offset="0x800017B5" value="02" original="00"/>
	</patch>
	<patch id="speedo">
		<memory offset="0x800017B6" value="01" original="00"/>
	</patch>
	<patch id="transfmusic">
		<memory offset="0x800017B7" value="01" original="00"/>
	</patch>
	<patch id="overlayedtransfmusic">
		<memory offset="0x800017B7" value="02" original="00"/>
	</patch>
	<patch id="orientbikesoutside">
		<memory offset="0x800017B8" value="01" original="00"/>
	</patch>
